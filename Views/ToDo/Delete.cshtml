@model ToDoApp.Models.ToDoItem

<div class="container mt-5">
    <h2>Delete ToDo Item</h2>
    <div class="col-md-4">

        <form asp-action="Delete">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" value="@Model.Name" readonly />
            </div>
            <div form-check mt-2>
                <input class="form-check-input" type="checkbox" checked="@Model.IsCompleted" disabled />
                <label>Is Completed</label>
            </div>
            <button type="submit" class="btn btn-danger mt-3">Delete</button>
        </form>
    </div>
</div>
